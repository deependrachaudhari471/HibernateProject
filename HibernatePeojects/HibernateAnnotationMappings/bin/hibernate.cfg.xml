<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
<session-factory>
<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="connection.url">jdbc:mysql://localhost:3306/hibernateannotation</property>
<property name="connection.username">root</property>
<property name="connection.password">root</property>
 
<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="show_sql">true</property>
<property name="hbm2ddl.auto">update</property>
 
<mapping class="in.com.prestige.dto.AddressDTO" />
<mapping class="in.com.prestige.dto.StudentDTO" />
<mapping class="in.com.prestige.dto.RoomDTO" />
<mapping class="in.com.prestige.dto.GuestDTO" />
<mapping class="in.com.prestige.dto.VendorDTO" />
<mapping class="in.com.prestige.dto.CustomersDTO" />
<mapping class="in.com.prestige.dto.AccountHoldersDTO" />
<mapping class="in.com.prestige.dto.BankDTO" />
<mapping class="in.com.prestige.dto.CustomerOrderDTo" />
<mapping class="in.com.prestige.dto.OrderDTO" />

<mapping class="in.com.prestige.tableperconcrete.ChequeDTO" />
<mapping class="in.com.prestige.tableperconcrete.CreditCardDTO" />
<mapping class="in.com.prestige.tableperconcrete.PaymentDTO" />



</session-factory>
</hibernate-configuration>